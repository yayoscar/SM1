import numpy as np
import matplotlib.pyplot as plt

# Número de lanzamientos
num_lanzamientos = 1000

# Lanzar dos dados de ocho caras
dados_1 = np.random.randint(1, 9, num_lanzamientos)  # Dado 1
dados_2 = np.random.randint(1, 9, num_lanzamientos)  # Dado 2

# Calcular las sumas de los resultados de los dados
suma_dados = dados_1 + dados_2

# Visualización de los resultados
plt.figure(figsize=(10, 6))
plt.hist(suma_dados, bins=range(2, 17), edgecolor='black', align='left', alpha=0.7)
plt.title('Resultados de 1000 Lanzamientos de Dos D8')
plt.xlabel('Suma de los Dados')
plt.ylabel('Frecuencia')
plt.xticks(range(2, 17))
plt.grid(axis='y', alpha=0.75)
plt.show()
