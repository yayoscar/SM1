import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

# Configuración de estilo
sns.set(style="whitegrid")

# Crear una matriz de productos para los resultados de dos dados
dice = np.arange(1, 7)  # Números en un dado
products = np.zeros((6, 6), dtype=int)  # Cambiar dtype a int

for i in range(6):
    for j in range(6):
        products[i, j] = dice[i] * dice[j]

# Crear la figura y los ejes
plt.figure(figsize=(8, 6))
sns.heatmap(products, annot=True, fmt="d", cmap="YlGnBu", cbar_kws={'label': 'Producto'}, xticklabels=dice, yticklabels=dice)

# Configurar títulos y etiquetas
plt.title("Productos de dos dados")
plt.xlabel("Dado 1")
plt.ylabel("Dado 2")
plt.show()
