import matplotlib.pyplot as plt
import random

def rw_visual(num_steps=5000, linewidth=1):
  """
  Simula el movimiento aleatorio de un grano de polen en el agua
  y grafica su trayectoria.

  Args:
    num_steps: El número de pasos a simular.
    linewidth: Ancho de línea para la gráfica.
  """

  x_values = [0]
  y_values = [0]

  for i in range(num_steps):
    # Genera un cambio aleatorio en las coordenadas x e y
    x_direction = random.choice([1, -1])
    y_direction = random.choice([1, -1])

    x_values.append(x_values[-1] + x_direction)
    y_values.append(y_values[-1] + y_direction)

  plt.plot(x_values, y_values, linewidth=linewidth)
  plt.xlabel("Distancia en X")
  plt.ylabel("Distancia en Y")
  plt.title("Movimiento Aleatorio")
  plt.show()

rw_visual()